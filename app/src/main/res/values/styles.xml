<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTextStyle" parent="@style/Widget.MaterialComponents.TextView" />

    <style name="AppTextStyle.Balance">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">right</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="AppTextStyle.BalanceTitle">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="AppTextStyle.Date">
        <item name="android:textColor">@color/mild_black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>